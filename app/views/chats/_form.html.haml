= form_with(model: chat, local: true) do |form|
  - if chat.errors.any?
    #error_explanation
      %h2
        = pluralize(chat.errors.count, "error")
        prohibited this chat from being saved:
      %ul
        - chat.errors.full_messages.each do |message|
          %li= message
  %textarea{:cols => "30", :name => "text", :rows => "10"}= chat.text
  .actions
    = form.submit
